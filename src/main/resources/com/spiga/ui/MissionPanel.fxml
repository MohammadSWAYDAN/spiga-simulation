<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml" 
    fx:controller="com.spiga.ui.MissionController" 
    spacing="0"
    prefWidth="300" minWidth="300"
    style="-fx-background-color: white;">

    <!-- SECTION 1: Missions List -->
    <Label text="Missions" styleClass="header-label">
        <padding><Insets top="10" left="10" bottom="5"/></padding>
    </Label>

    <ListView fx:id="listMissions" VBox.vgrow="ALWAYS" prefHeight="200" styleClass="list-view"/>

    <Separator />

    <!-- SECTION 2: New Mission Form -->
    <Label text="New Mission" styleClass="header-label">
        <padding><Insets top="10" left="10" bottom="5"/></padding>
    </Label>
    
    <VBox spacing="10" style="-fx-padding: 10;">
        <TextField fx:id="txtMissionTitle" promptText="Mission Title" />
        
        <Button fx:id="btnSetTarget" text="Set Target" onAction="#handleSetTarget" maxWidth="Infinity"
                styleClass="button-green" style="-fx-background-radius: 4;"/>
        
        <Label fx:id="lblTargetCoords" text="A: Position actuelle -> B: (1270, 980, 100)" 
               wrapText="true" style="-fx-font-size: 10px; -fx-text-fill: #64748B;"/>
        
        <Button text="Create Mission" onAction="#handleCreateMission" maxWidth="Infinity"
                styleClass="button-blue" style="-fx-background-radius: 4;"/>
    </VBox>

    <Separator />

    <!-- SECTION 3: Details footer -->
    <Label text="Mission Details" styleClass="header-label">
        <padding><Insets top="10" left="10" bottom="5"/></padding>
    </Label>
    <Label fx:id="lblMissionStatus" text="Sélectionné: new mission" style="-fx-padding: 0 10 10 10; -fx-text-fill: gray;"/>

</VBox>
